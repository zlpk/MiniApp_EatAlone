/* pages/historysearch/historysearch.wxss */
@import "../../style/weui.wxss";

.page__bd {
    padding-bottom: 0px;
}

.weui-panel weui-panel_access {
  margin-top: 0px;
}

.form-group {
  position:relative;
  -webkit-box-flex:1;
  -webkit-flex:auto;
  flex:auto;
  border-radius:5px;
  background:#fff;
  border:1rpx solid #e6e6ea;
}

.tagsinputview {
  display: flex;
  flex-direction: row;
  align-items: center;
  flex-wrap: wrap;
  width: 100%;
  background-color: white;
  background:#fff;
  border-radius: 5px;
}

.singletagview {
  height: 28px;
  width: auto;
  margin-top: 2px;
  margin-left: 2px;
  margin-right: 2px;
  margin-bottom: 2px;
  background-color: black;
  border-radius: 4px;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.tagdeleteiconview {
  width: auto;
  height: 100%;
  margin-left: 4px;
  margin-right: 4px;
  margin-bottom: 4px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.tagdeleteiconview text {
  font-weight: 900;
  font-size: 20px;
}

.tagcontentview {
  height: 100%;
  width: auto;
  margin-left: 2px;
  margin-right: 4px;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.tagcontentview text {
  color: white;
  font-size: 14px;
}

.inputview-iconsearch {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.inputview {
  height: 40px;
  width: 85%;
  margin-top: 2px;
  margin-left: 2px;
  margin-right: 2px;
  margin-bottom: 2px;
  background-color: white;
  border-radius: 8%;
}
.inputview input {
  width: 100%;
  height: 40px;
}

.icon-view {
  width: 15%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.icon {
  width: 100%;
}
