 page {
  background-color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.page-body {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.daily_vidio_view {
  width:100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.vidio_view{
  width: 100%;
}
.vidio-view video {
  width: 100%;
  height: 100%;
}
.foodname-view {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  padding-top: 10px;
  padding-bottom: 20px;
}
.foodname-view text{
  color: #e64340;
  font-weight: bold;
  font-size: 20pt;
  margin-left: 4%;
}

.kind-list {
  width: 100%;
  display: flex;
  flex-direction: column;
}
.kind-list-item {
  width: 100%;
  display: flex;
  flex-direction: column;
  border-bottom-width: 1px;
  border-bottom-color: #CCCCCC;
  border-bottom-style:  solid;
}
.kind-list-item-hd {
  widows: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.kind-list-item-hd-show {
  opacity: 0.5;
}

.item-title {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  padding: 10px;
}
.item-title image{
  width: 12px;
  height: 12px;
}
.item-title text {
  padding-left: 5px;
}

.expand-ollapse {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 10px;
}
.expand-ollapse-text {
  font-size: 12px;
  color: #CCCCCC;
}
.expand-ollapse-images {
  width: 12px;
  height: 12px;
  padding-left: 4px;
}

.kind-list-item-bd {
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.all-tags-view {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  padding-bottom: 10px;
  padding-left: 20px;
  padding-right: 20px;
}
.tag-view {
  width: auto;
  text-align: center;
  background-color: #e64340;
  color: #fff;
  font-size: 12px;
  padding: 2px 5px;
  border-radius: 4px;
  margin: 5px;
}

.all-card-view {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.step-card {
  width: 90%;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  border-width: 1px;
  border-color: #e64340;
  /* border-style: solid; */
  padding: 5px;
}
.steps-title {
  background-color: #e64340;
  width: 100%;
  border-top-left-radius: 4px;
  border-top-right-radius: 4px;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.step-title {
  font-size: 16px;
  font-weight: bold;
  color: #fff;
  padding-top: 10px;
  padding-bottom: 10px;
  padding-left: 10px;
}
.steps-body {
  background-color: #F2F2F2;
  width: 100%;
  border-bottom-left-radius: 4px;
  border-bottom-right-radius: 4px;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.step-body {
  font-size: 12px;
  padding-top: 20px;
  padding-bottom: 20px;
  padding-left: 10px;
}